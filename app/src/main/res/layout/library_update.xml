<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:theme="@style/AppTheme" >
    
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Re:Nichibros"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="@color/bottom_sheet_title"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp" />

    <Switch
        android:id="@+id/privacySwitch"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Private"
        android:textColor="@color/bottom_sheet_item"
        android:textSize="14sp"
        android:switchPadding="12dp"
        app:layout_constraintBaseline_toBaselineOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title"
        app:layout_constraintHorizontal_bias="1" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="Status"
        android:textColor="@color/bottom_sheet_title"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <Spinner
        android:id="@+id/statusSpinner"
        android:spinnerMode="dropdown"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="right"
        app:layout_constraintBaseline_toBaselineOf="@id/status"
        app:layout_constraintStart_toEndOf="@id/status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1" />

    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Progress"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="@color/bottom_sheet_title"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/status" />

    <app.youkai.progressview.ProgressView
        android:id="@+id/progressView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:pv_showMax="true"
        app:layout_constraintBottom_toBottomOf="@id/progress"
        app:layout_constraintStart_toEndOf="@id/progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1" />

    <TextView
        android:id="@+id/rewatched"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Rewatched"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="@color/bottom_sheet_title"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/progress" />

    <app.youkai.progressview.ProgressView
        android:id="@+id/rewatchedView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:pv_showMax="false"
        app:layout_constraintBottom_toBottomOf="@id/rewatched"
        app:layout_constraintStart_toEndOf="@id/rewatched"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Rating"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="@color/bottom_sheet_title"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/rewatched" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/rewatched"
        app:layout_constraintBottom_toBottomOf="@id/rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/rating"
        app:mrb_progressBackgroundTint="@color/bottom_sheet_title"
        app:mrb_progressTint="#fecb20"
        app:mrb_secondaryProgressTint="#fecb20" />

    <TextView
        android:id="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Personal notes"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="@color/bottom_sheet_title"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/rating" />

    <EditText
        android:id="@+id/notesInputEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/notes"
        android:paddingTop="0dp"
        android:hint="Edit notes" />

</android.support.constraint.ConstraintLayout>